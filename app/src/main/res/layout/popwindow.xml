<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2661c3"
    >



        <TextView
            android:id="@+id/pop_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send new fax select from"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textIsSelectable="false"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"

             />


    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >

   <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
       >
        <ImageButton
            android:id="@+id/footer_button1"
            android:src="@drawable/ic_menu_efax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_centerInParent="true"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="文件扫描器"
           android:layout_below="@+id/footer_button1"
           android:layout_centerHorizontal="true"
           android:textColor="#fff"
           android:textIsSelectable="false"
           android:textSize="10sp"
           android:textStyle="bold"
           />

   </RelativeLayout>

        <View
            android:id="@+id/cutline"
            android:layout_width="1dip"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="50dip"
            android:background="#fff" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


        <ImageButton
            android:id="@+id/footer_button2"
            android:src="@drawable/ic_menu_efax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_centerInParent="true"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF管理员"
                android:layout_below="@+id/footer_button2"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textIsSelectable="false"
                android:textSize="10sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

     </LinearLayout>


</LinearLayout>